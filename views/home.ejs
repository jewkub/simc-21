      }

      .banner {
        /* height: var(--banner-height); */
        
        overflow-x: hidden; /* https://stackoverflow.com/a/6433475/4468834 */
      }

      .register-card {
        position: absolute;
        bottom: calc(1/4 * (100vh - var(--nav-height) - var(--banner-height)));
        right: 2.5vw;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 20px;
        padding: 20px;
        color: white;
        max-width: 250px;
        
        display: flex;
        flex-flow: column nowrap;
      }

      .carousel-item {
        height: calc(100vh - var(--banner-height)); /* https://stackoverflow.com/a/36570618/4468834 */
        overflow: hidden;
      }
      .carousel-item img {
        height: calc(100vh - var(--banner-height));
        position: absolute;
        top: -9999px;
        bottom: -9999px;
        left: -9999px;
        right: -9999px;
        margin: auto;
      } /* https://stackoverflow.com/a/19414020/4468834 */
      .carousel-control-next {
        left: 15%;
        right: auto;
      }

      #navbar {
        background-color: var(--gray);
        transition: background-color 0.2s ease;
        /* display: none;
        overflow-x: hidden;
        overflow-y: visible;
        padding-right: 100px; */
      }
      #navbar.transparent {
        /* visibility: hidden; */
        background-color: rgba(0, 0, 0, 0.5);
        
      }
      .navbar-brand {
        height: calc(var(--nav-height) - 8px - 8px);
      }
      .navbar-expand-lg .navbar-nav .nav-link {
        padding-left: 1.1em;
        padding-right: 1.1em;
        color: var(--white);
        transition: background-color 0.2s ease;
      }
      .transparent.navbar-expand-lg .navbar-nav .nav-link {
        color: var(--white);
      }

      .transparent .nav-pills .show > .nav-link {
        background-color: transparent;
      }

      .circle-crop {
        overflow: hidden;
        border-radius: 50%;
      }

      .middle img{
        position: absolute;
        top: 0;
        left: -9999px;
        right: -9999px;
        margin: auto;
      }

      i {
        color: var(--green);
      }
      i.flaticon-arrow {
        display: none;
      }
      [class^="flaticon-"]::before {
        margin-left: 0px !important;
      }

      .icon::before {
        display: inline-block;
        font-style: normal;
        font-variant: normal;
        text-rendering: auto;
        margin-right: 0.75rem;
        -webkit-font-smoothing: antialiased;
        color: var(--green);
      }
      .call::before {
        font-family: "Flaticon";
        content: "\f100";
      }
      .mail::before {
        font-family: "Flaticon";
        content: "\f101";
      }
      .fb::before {
        font-family: "Flaticon";
        content: "\f104";
      }

      footer {
        background-color: var(--gray);
      }
      footer h1, footer h2, footer h3, footer h4, footer h5, footer h6, footer p, footer span {
        color: white;
      }
      #right {
        display: none;
      }

      a.anchor {
        display: block;
        position: relative;
        top: calc(0px - var(--nav-height));
        visibility: hidden;
        /* height: 0; */
      } /* https://stackoverflow.com/a/13184714/4468834

