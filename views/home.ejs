      } */

      @media only screen and (min-width: 768px) {
        i.flaticon-arrow {
          display: initial;
        }
        i.flaticon-arrow-down-sign-to-navigate {
          display: none;
        }
        #right {
          display: initial;
        }
      }

      @media only screen and (min-width: 992px) {
        #navbar {
          /* display: flex; */
          visibility: initial;
        }
        .bar {
